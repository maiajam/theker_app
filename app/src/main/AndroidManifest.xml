<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.maiajam.counter"
    android:versionCode="2">

    <uses-permission
        android:name="android.permission.VIBRATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="سبحتي"
        android:supportsRtl="false"
        android:roundIcon="@mipmap/logo"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.WelcomeActivity" />
        <activity
            android:name=".ui.activity.MainActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.listActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.activity.CounterActivity"
            android:parentActivityName=".ui.activity.listActivity" android:noHistory="true" android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.maiajam.counter.ui.activity.listActivity"   android:screenOrientation="portrait"/>
        </activity>
        <activity android:name=".ui.activity.ThekerTargetActivity" android:noHistory="true" android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >


        </activity>

    </application>

</manifest>